source 'https://rubygems.org'


# Gems for computing geodesic distances on an oblate spheroid
# Haversine is best for small distances, has rounding errors at large distances
# Graticule has several formulas, Vincenty is "accurate at all distances"
gem 'haversine'
gem 'graticule'

group :development, :test do
  gem 'rspec'
  gem 'byebug'
  gem 'simplecov'
end
